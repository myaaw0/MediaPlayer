<Window DataContext="{Binding RelativeSource={RelativeSource Self}}"
    x:Class="MediaPlayer01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="200" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*" />
            <!-- LEFT COLUMN -->
            <ColumnDefinition Width="3*"/>
            <!-- RIGHT COLUMN -->
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="#D9DBF1"></Rectangle>
        <Rectangle Grid.Column="0" Fill="#f9f9ed"></Rectangle>
        <!--ROWS AND THEIR SIZES-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!--TOP TEXT RIGHT COLUMN-->
                <RowDefinition Height="143*"/>
                <!-- PLAYLIST -->
                <RowDefinition Height="50"/>
                <!-- TEXT ABOVE PLAY WINDOW -->
                <RowDefinition Height="191*"/>
                <!-- PLAY WINDOW -->
                <RowDefinition Height="20"/>
                <!-- SLIDER -->
                <RowDefinition Height="50"/>
                <!-- MULTIMEDIA BUTTONS -->
            </Grid.RowDefinitions>
            <!--TEXT ABOVE PLAYLIST-->
            <TextBlock Grid.Row="0" FontSize="20" Margin="5 15 0 0">CURRENT PLAYLIST</TextBlock>
            <!--PLAYLIST COLUMNS-->
            <Grid Grid.Row="1">
                <DataGrid ItemsSource="{Binding Playlist}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedSong}" MouseDoubleClick="ClickListViewItem">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Cover Picture" Binding="{Binding CoverPicture}" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Release Year" Binding="{Binding ReleaseYear}" Width="*" ></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <!--TEXT ABOVE PLAY WINDOW-->
            <TextBlock Grid.Row="2" FontSize="20" Margin="5 15 0 0">You're listening to :</TextBlock>
            <!-- PLAY WINDOW  -->
            <MediaElement Grid.Row="3" x:Name="musicPlayer" Grid.RowSpan="2" UnloadedBehavior="Stop" Source="C:\Users\mv01\source\repos\MediaPlayer\MediaPlayer\Resources\Media\example.avi" LoadedBehavior="Manual" >
                <MediaElement.Style>
                    <Style/>
                </MediaElement.Style>
            </MediaElement>

            <!--SLIDER-->
            <Slider Grid.Row="4" Minimum="0" Maximum="100" Margin="0 0 0 2"></Slider>

            <!--MULTIMEDIA BUTTONS-->
            <StackPanel Orientation="Horizontal"  Grid.Row="5" FlowDirection="LeftToRight" HorizontalAlignment="Center" Margin="0,12,0,0" Grid.RowSpan="2">
                <Label Content="0:00" HorizontalAlignment="Center" Margin="5"></Label>
                <Button Name="rewind_btn" Width="48px" Margin="4" Click="Button_Click_Rewind">
                    <Image Source="/rewind.png"></Image>
                </Button>
                <Button Name="play_btn" Width="48px" Margin="4" Click="Button_Click_Play">
                    <Image Source="/play.png"></Image>
                </Button>
                <Button Name="pause_btn" Width="48px" Margin="4" Click="Button_Click_Pause">
                    <Image Source="/pause.png"></Image>
                </Button>
                <Button Name="forward_btn" Width="48px" Margin="4">
                    <Image Source="/forward.png"></Image>
                </Button>
                <Button Name="shuffle_btn" Width="48px" Margin="4">
                    <Image Source="/shuffle.png"></Image>
                </Button>


            </StackPanel>

        </Grid>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Click="MenuItemExit_Click" Header="Exit"></MenuItem>
                </MenuItem>

                <MenuItem  Header="List">
                    <MenuItem Click="MenuItemAdd_Click" Header="Add"></MenuItem>
                    <MenuItem Click ="MenuItemRemove_Click" Header="Remove"></MenuItem>
                    <MenuItem Header="Edit"></MenuItem>
                </MenuItem>
                <MenuItem Header="Tools">
                    <MenuItem Header="Settings"></MenuItem>
                </MenuItem>
            </Menu>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Margin="10" Width="90">HOME</Button>
                <Button Grid.Row="1" Margin="10" Width="90">LIBRARY</Button>
                <Button Grid.Row="2" Margin="10" Width="90">FAVORITE</Button>
                <Button Grid.Row="3" Margin="10" Width="90">PLAYLISTS</Button>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
